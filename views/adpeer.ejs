                                        '<a role="button" href="/adpeer/adpeeredit?id='+data+'" class="btn btn-default btn-xs">Edit</a>',
                                        '<a role="button" data-confirm-text="Delete it!" href="/data/deleteAdpeerData?id='+data+'" class="btn btn-default btn-xs J_dataTablesDetele">Delete</a>'
                            ];
                            return option.join('&nbsp;');
                        }
                    },
                    { "data": "appid" },
                    { "data": "appname" },
                    { "data": "adx_name" }//,
                    //{ "data": "category" }
