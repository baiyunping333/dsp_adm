<script type="text/javascript">
    $(function() {
        //
        window.MyObj.ListPage.init({
            "tableId": "#J_tableAdPeer",
            "delBtns": ".J_dataTablesDetele", //
            "dataTabOps":{
                "paging":   true, //分页
                "ordering": true, //排序
                "info":     false, //信息（左下）
                "lengthChange": false, //每页条数
                "searching": false, //搜索
                //"serverSide": false,
                "ajax": "/data/getAdpeerDataList",
                //"data": window.globalAdPeerDatas,
                "columns": [
                    {
                        "data": "id",
                        "orderable": false,
                        "render": function(data, type, full, meta){
